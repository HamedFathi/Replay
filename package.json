{
	"name": "vscode-replay",
	"displayName": "replay",
	"publisher": "hamedfathi",
	"author": {
		"name": "Hamed Fathi",
		"url": "https://github.com/HamedFathi"
	},
	"icon": "icon.png",
	"homepage": "https://github.com/HamedFathi/Replay",
	"bugs": {
		"url": "https://github.com/HamedFathi/Replay/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/HamedFathi/Replay"
	},
	"description": "A Visual Studio Code extension for auto typing.",
	"version": "1.3.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:vscode-replay.replay",
		"onCommand:vscode-replay.pause"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "plaintext",
				"path": "./snippets/snippets.code-snippets"
			}
		],
		"keybindings": [
			{
				"command": "vscode-replay.replay",
				"key": "alt+ctrl+shift+r",
				"mac": "alt+cmd+shift+p",
				"when": "editorTextFocus"
			},
			{
				"command": "vscode-replay.pause",
				"key": "alt+ctrl+shift+p",
				"mac": "alt+cmd+shift+p",
				"when": "editorTextFocus"
			}
		],
		"commands": [
			{
				"command": "vscode-replay.replay",
				"title": "vscode-replay"
			},
			{
				"command": "vscode-replay.pause",
				"title": "vscode-pause"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"dependencies": {
		"fast-glob": "^3.2.11",
		"gray-matter": "^4.0.3"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"esbuild": "^0.14.49",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2"
	}
}